<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Relativechild"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/tealcolour">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="8dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginHorizontal="50dp"/>

        <ImageView
            android:layout_width="27dp"
            android:layout_height="29dp"
            android:src="@drawable/ic_baseline_mic_24"
            android:layout_marginHorizontal="340dp"
            android:layout_marginVertical="4dp"/>

        <ImageView
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:src="@drawable/basket"
            android:layout_marginHorizontal="370dp"
            android:layout_marginVertical="3dp"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_marginTop="68dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shapelinear">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                android:layout_marginHorizontal="343dp"
                android:layout_marginVertical="7dp"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_marginVertical="78dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="342dp"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="72dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:text="Search in Sea Green Jewellery"
           android:textSize="22dp"
           android:textColor="@android:color/darker_gray"
           android:layout_marginVertical="72dp"
           android:layout_marginHorizontal="44dp"/>

    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Relativechild"
        android:numColumns="2"
        android:background="@android:color/white"
        android:id="@+id/AmazonList"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="1dp"
        android:layout_height="660dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:layout_marginHorizontal="205dp"/>

</RelativeLayout>